# ===========================================
# Vantage Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real values to git

# ===========================================
# Environment
# ===========================================

ENVIRONMENT=development
NODE_ENV=development

# ===========================================
# Logging
# ===========================================
# Available levels: debug, info, warning, error

LOG_LEVEL=info
NEXT_PUBLIC_LOG_LEVEL=info

# ===========================================
# Sentry Error Tracking
# ===========================================
# Get these from your Sentry project settings
# https://sentry.io/settings/projects/

SENTRY_DSN=https://your-public-key@xxx.ingest.sentry.io/your-project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-key@xxx.ingest.sentry.io/your-project-id

# ===========================================
# Supabase
# ===========================================
# Get these from your Supabase project settings

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# Docker Compose (for local development)
# ===========================================
# These are used by docker-compose.yml

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=vantage

# ===========================================
# Database
# ===========================================
# For local development with Docker:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vantage
# For running inside Docker network:
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/vantage

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vantage

# ===========================================
# Redis
# ===========================================
# For local development with Docker:
# REDIS_URL=redis://localhost:6379
# For running inside Docker network:
# REDIS_URL=redis://redis:6379

REDIS_URL=redis://localhost:6379

# ===========================================
# API Configuration
# ===========================================

API_HOST=0.0.0.0
API_PORT=8000
NEXT_PUBLIC_API_URL=http://localhost:8000
